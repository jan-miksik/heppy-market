supported-architectures[cpu]=x64,arm64
supported-architectures[os]=linux,darwin
# Use absolute path to sh so install scripts (e.g. esbuild) don't get spawn sh ENOENT
script-shell=/bin/sh
# Hoist all packages to root node_modules/ like npm does.
# Required because Vite's dep pre-bundler and several CJS packages (vue/devtools-api,
# eventemitter3, oxâ€¦) rely on flat hoisting that pnpm's strict isolation breaks.
shamefully-hoist=true
